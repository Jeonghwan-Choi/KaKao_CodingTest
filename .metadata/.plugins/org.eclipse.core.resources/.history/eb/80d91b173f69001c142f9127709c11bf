package com.Cote;

public class KaKao_ex2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] A = {7,-5,-5,-5,7,-1,7};
		int answer = 0;
		
		int ex1 = 0;
		int ex2 = 0;
		
		int i = 0;
		int j = 0;
		

		
		while (i < A.length) {
			System.out.println(A[i]);
			
			if(i< A.length-2) {
				if(A[i] == A[i+2]) {
					
					System.out.println("같은 부분");
					ex1 = ex1+2;
					
				}
			}	
			
			
			
			
			i++;
		}
		System.out.println("ex1:"+ex1);
		
	    System.out.println(answer);


	}

}
